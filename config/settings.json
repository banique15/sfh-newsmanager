{
    "application": {
        "name": "Newsletter Manager",
        "version": "1.0.0",
        "environment": "development"
    },
    "agent": {
        "name": "Newsletter Manager",
        "role": "content_management",
        "default_tone": "professional",
        "response_style": "concise",
        "confirmation_required": true
    },
    "channels": {
        "slack": {
            "enabled": true,
            "bot_name": "Newsletter Manager",
            "default_channel": "#content-team",
            "use_threads": true,
            "block_kit_enabled": true
        },
        "email": {
            "enabled": true,
            "reply_to": "newsletter@singforhope.org",
            "signature": "Newsletter Manager | Sing for Hope",
            "html_enabled": true
        },
        "portal": {
            "enabled": false,
            "base_url": "https://app.singforhope.org"
        }
    },
    "content_generation": {
        "default_tone": "inspiring",
        "default_length": "medium",
        "max_tokens": 2000,
        "temperature": 0.7,
        "organization_context": "Sing for Hope - nonprofit bringing the arts to communities",
        "target_audience": "supporters, donors, community members",
        "length_definitions": {
            "short": "150-250 words",
            "medium": "300-500 words",
            "long": "600-800 words"
        }
    },
    "image_generation": {
        "default_style": "vibrant",
        "default_aspect_ratio": "16:9",
        "default_mood": "inspiring",
        "organization_branding": true,
        "min_width": 1200,
        "supported_formats": [
            "PNG",
            "JPEG",
            "WebP"
        ]
    },
    "image_storage": {
        "max_file_size_mb": 10,
        "optimization_enabled": true,
        "optimization_quality": 85,
        "max_width": 2000,
        "max_height": 2000,
        "supported_formats": [
            "PNG",
            "JPEG",
            "JPG",
            "WebP"
        ]
    },
    "article_defaults": {
        "status": "draft",
        "author": "Newsletter Manager Bot",
        "auto_generate_excerpt": true,
        "auto_generate_slug": true,
        "excerpt_max_length": 300
    },
    "confirmation": {
        "required_for_create": true,
        "required_for_update": true,
        "required_for_delete": true,
        "required_for_publish": true,
        "required_for_unpublish": true,
        "required_for_bulk": true,
        "timeout_seconds": 300
    },
    "bulk_operations": {
        "max_items": 50,
        "timeout_seconds": 300,
        "continue_on_error": true
    },
    "context_resolution": {
        "max_conversation_turns": 10,
        "pronoun_confidence_threshold": 0.7,
        "cross_channel_enabled": true
    },
    "memory": {
        "article_reference_ttl_hours": 168,
        "conversation_turn_ttl_hours": 24,
        "pending_confirmation_ttl_minutes": 60,
        "user_preference_ttl_days": 30
    },
    "rate_limits": {
        "content_generation_per_minute": 10,
        "image_generation_per_minute": 5,
        "article_crud_per_minute": 50,
        "search_per_minute": 100
    },
    "error_handling": {
        "show_technical_details": false,
        "suggest_retry": true,
        "max_retries": 2,
        "log_errors": true
    },
    "search": {
        "default_limit": 20,
        "max_limit": 100,
        "default_sort_by": "created_at",
        "default_sort_order": "desc"
    },
    "workflows": {
        "create_with_image": {
            "enabled": true,
            "timeout_seconds": 60
        },
        "update_and_publish": {
            "enabled": true,
            "timeout_seconds": 30
        },
        "bulk_publish": {
            "enabled": true,
            "timeout_seconds": 300
        }
    },
    "logging": {
        "level": "info",
        "format": "json",
        "include_timestamps": true,
        "log_user_interactions": true,
        "log_tool_calls": true
    },
    "monitoring": {
        "track_success_rate": true,
        "track_response_time": true,
        "track_user_satisfaction": false,
        "alert_on_errors": true
    }
}