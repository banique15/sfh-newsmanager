# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Newsletter Manager
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE (PostgreSQL via Supabase)
# =============================================================================
DATABASE_URL=postgresql://user:password@host:port/database
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# SUPABASE
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_BUCKET=uploads

# =============================================================================
# LLM PROVIDERS (Choose one or more)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# GOOGLE_API_KEY=your-google-key

# Default LLM to use
DEFAULT_LLM=openai
DEFAULT_MODEL=gpt-4

# =============================================================================
# SLACK
# =============================================================================
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# =============================================================================
# EMAIL
# =============================================================================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=newsletter@singforhope.org
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=newsletter@singforhope.org

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
AGENT_NAME=Newsletter Manager
CONFIRMATION_REQUIRED=true
CONFIRMATION_TIMEOUT=300

# =============================================================================
# CONTENT GENERATION
# =============================================================================
CONTENT_DEFAULT_TONE=inspiring
CONTENT_DEFAULT_LENGTH=medium
CONTENT_MAX_TOKENS=2000

# =============================================================================
# IMAGE GENERATION
# =============================================================================
IMAGE_DEFAULT_STYLE=vibrant
IMAGE_DEFAULT_SIZE=1792x1024

# =============================================================================
# RATE LIMITS
# =============================================================================
CONTENT_GEN_RATE_LIMIT=10
IMAGE_GEN_RATE_LIMIT=5
MAX_BULK_SIZE=50

# =============================================================================
# REDIS (for caching and memory)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
